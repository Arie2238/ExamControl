@model ExamControl.Models.Exam.InsertExamModel

@{
    ViewBag.Title = "View";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Aanmaken tentamen</h2>

@using (Html.BeginForm("InsertExam", "Exam", FormMethod.Post))
{
    <br>
    <div class="row">
        <div class="col-sm">
            <table class="table table-striped table-dark">
                <thead>
                    <tr>
                        <th scope="col">Selecteer Vak</th>
                        <th scope="col">Aantal studenten</th>
                        <th scope="col">Toezicht tentamen</th>
                        <th scope="col">Computerlokaal</th>
                        <th scope="col">Uploaden</th>
                        <th scope="col">Gelukt</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <th scope="row">
                            <div class="form-group">

                                @Html.DropDownListFor(m => m.SelectedExamSubject, ViewBag.ExamSubjects as IEnumerable<SelectListItem>, "Selecteer vak...", new { @class = "form-control" })
                                @*<select class="form-control" id="exampleFormControlSelect1">
                                        <option>ASP C# .NET</option>
                                        <option>Engels 1</option>
                                        <option>RUP</option>
                                    </select>*@
                            </div>
                        </th>
                        <td>
                            <div class="form-group">
                                @Html.TextBoxFor(m => m.EstimatedAmountOfStudents, new { @class = "form-control", placeholder = "voer getal in" })
                                @*<input class="form-control" id="exampleFormEnter" placeholder="voer getal in">*@
                            </div>
                        </td>
                        <td>
                            <div class="form-group">
                                <select class="form-control" id="exampleFormControlSelect2">
                                    <option>Keuze...</option>
                                    <option>Docent</option>
                                    <option>Surveillant</option>
                                </select>
                            </div>
                        </td>
                        <td>
                            <div class="form-group">
                                <select class="form-control" id="exampleFormControlSelect3">
                                    <option>Keuze...</option>
                                    <option>Ja</option>
                                    <option>Nee</option>
                                </select>
                            </div>
                        </td>
                        <td>

                            <button class="btn btn-secondary">Bladeren</button>
                            &nbsp
                            <button class="btn btn-primary">Uploaden</button>

                        </td>

                        <td>
                            <img src="https://upload.wikimedia.org/wikipedia/commons/thumb/e/e5/Green_tick_pointed.svg/768px-Green_tick_pointed.svg.png"
                                 width="20px" height="20px" />
                        </td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>
    <div class="float-right btnContainer">
        <button class="btn btn-secondary">terug</button>
        <button type="submit" class="btn btn-primary">Opslaan</button>
    </div>
}